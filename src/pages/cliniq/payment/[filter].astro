---
import LayoutSidebar from "../../../app/LayoutSidebar.astro";
import PaperEntry from "../../../lib/enhancements/paper-entry.astro";
import CrudNTT from "../../../modules/CrudNTT.astro";

export const prerender = false;

const { resource, id } = Astro.params;
const context = resource;
console.log("found",  resource, id);
const splitted = id?.split("/");
const [entity, filter] = (splitted?.length === 2) ? splitted : ["",""];

---

<LayoutSidebar>
	<PaperEntry>
		<div class="-ml-7 -mt-6">
		<CrudNTT {context} {entity} {filter}/>
		</div>
	</PaperEntry>
</LayoutSidebar>
