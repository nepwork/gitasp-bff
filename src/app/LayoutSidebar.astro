---
import FooterSidebar from './FooterSidebar.astro';
import LayoutCommon from './LayoutCommon.astro';
import NavBarSidebar from './NavBarSidebar.astro';
import SideBar from './SideBar.astro';
---

<LayoutCommon>
	<NavBarSidebar />

	<SideBar />

	<div class="flex -ml-3 pt-16 overflow-hidden bg-teal-100 dark:bg-gray-900">
		<div
			id="main-content"
			class="relative w-full h-full overflow-y-auto bg-teal-100 lg:ml-64 dark:bg-gray-900 min-h-screen"
		>
			<slot />

			<FooterSidebar />
		</div>
	</div>
</LayoutCommon>
